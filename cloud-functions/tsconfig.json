{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "types": [],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "../..",
    "baseUrl": "../..",
    "paths": {
      "@shared/*": ["shared/*"]
    }
  },
  "include": ["./**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist"]
}
