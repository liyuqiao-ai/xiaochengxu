.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #4CAF50 0%, #45a049 100%);
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
}

.header {
  text-align: center;
  color: white;
  margin-bottom: 80rpx;
}

.title {
  display: block;
  font-size: 56rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.subtitle {
  display: block;
  font-size: 32rpx;
  opacity: 0.9;
}

.role-list {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
}

.role-item {
  background: white;
  border-radius: 20rpx;
  padding: 40rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: transform 0.2s;
}

.role-item:active {
  transform: scale(0.98);
}

.role-icon {
  font-size: 80rpx;
  margin-right: 30rpx;
}

.role-name {
  flex: 1;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.role-desc {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.footer {
  margin-top: 40rpx;
}

.login-btn {
  width: 100%;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: 2rpx solid white;
  border-radius: 10rpx;
  padding: 30rpx;
  font-size: 32rpx;
}

