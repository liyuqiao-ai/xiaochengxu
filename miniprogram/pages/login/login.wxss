/* 登录容器 */
.login-container {
  width: 100%;
  min-height: 100vh;
  background-color: #f5f5f5;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
}

/* Logo区域 */
.logo {
  margin-bottom: 60rpx;
  text-align: center;
}

.platform-name {
  font-size: 48rpx;
  font-weight: bold;
  color: #2d8c34;
  margin-bottom: 20rpx;
}

.platform-subtitle {
  font-size: 36rpx;
  color: #666;
  margin-bottom: 60rpx;
}

/* 登录选项 */
.login-options {
  width: 100%;
  max-width: 800rpx;
  display: flex;
  flex-direction: column;
  gap: 30rpx;
  margin-bottom: 60rpx;
}

.login-btn {
  width: 100%;
  padding: 28rpx;
  border-radius: 16rpx;
  border: 2rpx solid #e0e0e0;
  background-color: white;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  transition: all 0.3s;
}

.login-btn::after {
  border: none;
}

.login-btn[disabled] {
  opacity: 0.6;
}

.wechat-login {
  border-color: #07c160;
  color: #07c160;
}

.phone-login {
  border-color: #1989fa;
  color: #1989fa;
}

.wechat-quick {
  background-color: #07c160;
  color: white;
  border: none;
}

.wechat-quick:active {
  background-color: #06ae56;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  font-size: 40rpx;
  line-height: 40rpx;
}

/* 手机号登录表单 */
.phone-login-form {
  width: 100%;
  max-width: 800rpx;
  background-color: white;
  border-radius: 16rpx;
  padding: 40rpx;
  margin-top: 30rpx;
  box-shadow: 0 4rpx 24rpx rgba(0, 0, 0, 0.1);
  display: none;
}

.phone-login-form.show {
  display: block;
}

.form-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 40rpx;
}

.form-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  color: #999;
}

.form-item {
  margin-bottom: 40rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 20rpx;
}

.form-item .input {
  width: 100%;
  padding: 24rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: #f9f9f9;
}

.verify-code-row {
  display: flex;
  gap: 20rpx;
  align-items: center;
}

.verify-code-input {
  flex: 1;
}

.send-code-btn {
  padding: 24rpx 40rpx;
  background-color: #1989fa;
  color: white;
  border-radius: 8rpx;
  font-size: 28rpx;
  white-space: nowrap;
}

.send-code-btn::after {
  border: none;
}

.send-code-btn[disabled] {
  background-color: #ccc;
}

.submit-btn {
  width: 100%;
  padding: 28rpx;
  background-color: #1989fa;
  color: white;
  border-radius: 8rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
}

.submit-btn::after {
  border: none;
}

.submit-btn[disabled] {
  background-color: #ccc;
}

.error-text {
  display: block;
  color: #ff4444;
  font-size: 24rpx;
  margin-top: 20rpx;
  text-align: center;
}

/* 用户协议 */
.agreement {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
  text-align: center;
}

.agreement .link {
  color: #2d8c34;
  text-decoration: underline;
}

/* 错误提示 */
.error-toast {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background-color: rgba(0, 0, 0, 0.8);
  color: white;
  padding: 30rpx 60rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  z-index: 9999;
}
