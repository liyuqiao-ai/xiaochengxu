.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

.order-header {
  background: white;
  padding: 30rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.order-job {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 28rpx;
  color: #4CAF50;
  padding: 8rpx 20rpx;
  background: #e8f5e9;
  border-radius: 20rpx;
}

.quote-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.quote-item {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.quote-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.contractor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.contractor-info {
  flex: 1;
}

.contractor-name {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.credit-score {
  font-size: 24rpx;
  color: #666;
}

.quote-price {
  padding: 20rpx;
  background: #f9f9f9;
  border-radius: 8rpx;
  margin-bottom: 15rpx;
}

.price-label {
  font-size: 28rpx;
  color: #666;
}

.price-value {
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin: 0 10rpx;
}

.price-unit {
  font-size: 28rpx;
  color: #666;
}

.quote-time {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.quote-actions {
  display: flex;
  gap: 20rpx;
  justify-content: flex-end;
}

.btn-detail {
  background: #f0f0f0;
  color: #333;
}

.btn-accept {
  background: #4CAF50;
  color: white;
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #999;
}

