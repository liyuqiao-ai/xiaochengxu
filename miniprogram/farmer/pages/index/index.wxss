.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding-bottom: 20rpx;
}

.user-card {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  padding: 40rpx;
  display: flex;
  align-items: center;
  color: white;
  margin-bottom: 20rpx;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 30rpx;
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.role {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.quick-actions {
  display: flex;
  background: white;
  padding: 30rpx;
  margin-bottom: 20rpx;
  gap: 30rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.badge {
  position: absolute;
  top: -10rpx;
  right: 20rpx;
  background: #ff4444;
  color: white;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  min-width: 32rpx;
  text-align: center;
}

.section {
  background: white;
  margin-bottom: 20rpx;
  padding: 30rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.section-count {
  font-size: 28rpx;
  color: #999;
}

.order-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.order-item {
  padding: 30rpx;
  background: #f9f9f9;
  border-radius: 10rpx;
  border-left: 4rpx solid #4CAF50;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.order-job {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  background: #f0f0f0;
  color: #666;
}

.order-status.pending {
  background: #fff3cd;
  color: #856404;
}

.order-status.quoted {
  background: #d1ecf1;
  color: #0c5460;
}

.order-status.confirmed,
.order-status.in_progress {
  background: #d4edda;
  color: #155724;
}

.order-info {
  margin-bottom: 10rpx;
}

.order-location {
  font-size: 28rpx;
  color: #666;
}

.order-time {
  font-size: 24rpx;
  color: #999;
}

.empty {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.empty-btn {
  background-color: #4CAF50;
  color: white;
  border-radius: 10rpx;
  padding: 20rpx 40rpx;
  font-size: 32rpx;
}

