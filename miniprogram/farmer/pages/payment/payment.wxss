.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.payment-info {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
}

.amount-section {
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 2rpx solid #eee;
  margin-bottom: 30rpx;
}

.amount-label {
  display: block;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.amount-value {
  display: block;
  font-size: 72rpx;
  font-weight: bold;
  color: #ff6b35;
}

.detail-section {
  padding: 20rpx 0;
}

.detail-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.detail-item:last-child {
  border-bottom: none;
}

.detail-label {
  font-size: 28rpx;
  color: #666;
}

.detail-value {
  font-size: 28rpx;
  color: #333;
}

.payment-section {
  padding: 20rpx 0;
}

.pay-btn {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.pay-btn[disabled] {
  background-color: #ccc;
}

