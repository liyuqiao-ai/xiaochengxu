<view class="container">
  <view class="payment-info" wx:if="{{order && order.financials}}">
    <view class="amount-section">
      <text class="amount-label">支付金额</text>
      <text class="amount-value">{{formatAmount(order.financials.totalAmount)}} 元</text>
    </view>

    <view class="detail-section">
      <view class="detail-item">
        <text class="detail-label">基础劳务费</text>
        <text class="detail-value">{{formatAmount(order.financials.baseAmount)}} 元</text>
      </view>
      <view class="detail-item">
        <text class="detail-label">平台服务费</text>
        <text class="detail-value">{{formatAmount(order.financials.platformFee)}} 元</text>
      </view>
      <view class="detail-item" wx:if="{{order.financials.introducerCommission > 0}}">
        <text class="detail-label">介绍方佣金</text>
        <text class="detail-value">{{formatAmount(order.financials.introducerCommission)}} 元</text>
      </view>
    </view>
  </view>

  <view class="payment-section">
    <button
      class="pay-btn"
      bindtap="createPayment"
      disabled="{{loading}}"
      loading="{{loading}}"
    >
      {{loading ? '处理中...' : '立即支付'}}
    </button>
  </view>
</view>

