.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order-info {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.order-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.order-location {
  font-size: 28rpx;
  color: #666;
}

.quotes-section {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.quote-list {
  min-height: 200rpx;
}

.quote-item {
  padding: 20rpx;
  border: 1rpx solid #eee;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  background-color: #fafafa;
}

.quote-header {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.contractor-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.contractor-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.contractor-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.credit-score {
  font-size: 24rpx;
  color: #999;
}

.quote-price {
  text-align: right;
}

.price-label {
  display: block;
  font-size: 24rpx;
  color: #999;
  margin-bottom: 5rpx;
}

.price-value {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ff6b35;
}

.quote-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 15rpx;
  border-top: 1rpx solid #eee;
}

.quote-time {
  font-size: 24rpx;
  color: #999;
}

.quote-actions {
  display: flex;
  gap: 10rpx;
}

.btn-detail {
  background-color: #f0f0f0;
  color: #333;
}

.btn-accept {
  background-color: #4CAF50;
  color: white;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

