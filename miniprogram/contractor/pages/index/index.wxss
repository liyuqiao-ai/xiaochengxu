.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  border-radius: 10rpx;
  padding: 40rpx;
  margin-bottom: 20rpx;
  color: white;
}

.user-info {
  display: flex;
  align-items: center;
}

.avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 20rpx;
}

.user-details {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 8rpx;
}

.role {
  display: block;
  font-size: 28rpx;
  opacity: 0.9;
}

.stats-section {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-around;
}

.stat-item {
  text-align: center;
}

.stat-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.stat-label {
  display: block;
  font-size: 28rpx;
  color: #666;
}

.quick-actions {
  background: white;
  border-radius: 10rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  gap: 30rpx;
}

.action-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.action-icon {
  font-size: 60rpx;
  margin-bottom: 10rpx;
}

.action-text {
  font-size: 28rpx;
  color: #333;
}

.section {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.order-list {
  min-height: 200rpx;
}

.order-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 10rpx;
}

.order-item:last-child {
  border-bottom: none;
  margin-bottom: 0;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.order-job {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.order-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background-color: #f0f0f0;
  color: #666;
}

.order-status.pending {
  background-color: #fff3cd;
  color: #856404;
}

.order-status.quoted {
  background-color: #d1ecf1;
  color: #0c5460;
}

.order-status.confirmed {
  background-color: #d4edda;
  color: #155724;
}

.order-status.in_progress {
  background-color: #cce5ff;
  color: #004085;
}

.order-status.completed {
  background-color: #d1ecf1;
  color: #0c5460;
}

.order-info {
  margin-bottom: 10rpx;
}

.order-location {
  font-size: 28rpx;
  color: #666;
}

.order-actions {
  display: flex;
  justify-content: flex-end;
  margin-top: 10rpx;
}

.btn-quote {
  background-color: #4CAF50;
  color: white;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.empty {
  text-align: center;
  padding: 40rpx;
  color: #999;
  font-size: 28rpx;
}

