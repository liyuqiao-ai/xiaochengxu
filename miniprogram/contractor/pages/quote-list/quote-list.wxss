.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background: white;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
}

.tab-item.active {
  background-color: #4CAF50;
  color: white;
  font-weight: bold;
}

.quote-list {
  min-height: 400rpx;
}

.quote-item {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.quote-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.quote-job {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.quote-status {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
  background-color: #f0f0f0;
  color: #666;
}

.quote-status.quoted {
  background-color: #e3f2fd;
  color: #2196f3;
}

.quote-status.confirmed {
  background-color: #e8f5e9;
  color: #4CAF50;
}

.quote-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 15rpx;
}

.quote-location {
  font-size: 28rpx;
  color: #666;
  flex: 1;
}

.quote-time {
  font-size: 24rpx;
  color: #999;
}

.quote-actions {
  display: flex;
  justify-content: flex-end;
  padding-top: 15rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-quote {
  background-color: #4CAF50;
  color: white;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

