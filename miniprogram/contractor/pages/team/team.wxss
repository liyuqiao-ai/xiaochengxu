.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.tabs {
  display: flex;
  background: white;
  border-radius: 10rpx;
  padding: 10rpx;
  margin-bottom: 20rpx;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 8rpx;
}

.tab-item.active {
  background-color: #4CAF50;
  color: white;
  font-weight: bold;
}

.member-list,
.request-list {
  min-height: 400rpx;
}

.member-item,
.request-item {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
}

.member-avatar,
.request-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.member-info,
.request-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.member-name,
.request-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 5rpx;
}

.member-meta,
.request-meta {
  font-size: 24rpx;
  color: #999;
}

.member-actions,
.request-actions {
  display: flex;
  gap: 10rpx;
}

.btn-detail {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.btn-remove {
  background-color: #ff4444;
  color: white;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.btn-approve {
  background-color: #4CAF50;
  color: white;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.btn-reject {
  background-color: #ff9800;
  color: white;
  border-radius: 6rpx;
  padding: 0 20rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 20rpx;
  color: #999;
  font-size: 28rpx;
}

