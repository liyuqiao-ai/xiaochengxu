.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order-info-section,
.quote-section {
  background: white;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.suggested-price {
  background: #e8f5e9;
  border-radius: 8rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  border-left: 4rpx solid #4CAF50;
}

.suggest-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.suggest-label {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
}

.btn-use-suggest {
  background: #4CAF50;
  color: white;
  border-radius: 6rpx;
}

.suggest-value {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #4CAF50;
  margin-bottom: 10rpx;
}

.suggest-desc {
  display: block;
  font-size: 24rpx;
  color: #666;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  padding-bottom: 10rpx;
  border-bottom: 2rpx solid #eee;
}

.info-item {
  display: flex;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.label {
  width: 200rpx;
  font-size: 28rpx;
  color: #666;
}

.value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-item .label {
  display: block;
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  font-size: 32rpx;
  background-color: #f9f9f9;
}

.tips {
  padding: 20rpx;
  background-color: #f0f7ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
  line-height: 1.6;
}

.submit-section {
  padding: 20rpx 0;
}

.submit-btn {
  width: 100%;
  background-color: #4CAF50;
  color: white;
  border-radius: 10rpx;
  padding: 30rpx;
  font-size: 36rpx;
  font-weight: bold;
}

.submit-btn[disabled] {
  background-color: #ccc;
}

